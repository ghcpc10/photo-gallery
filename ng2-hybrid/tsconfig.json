{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "./client/src/app/app-ng1.d.ts",
    "./client/src/app/app-ng2.ts"
  ],
  "filesGlob": [
    "./typings/**/*.d.ts",
    "./client/src/app/**/*.ts",
    "./client/src/components/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
